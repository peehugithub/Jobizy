<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagal">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView_Sector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="Sector"
        android:textColor="#555555"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_sector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Sector"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:text="@string/Sector" />


    <TextView
        android:id="@+id/textView_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_Sector"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="Region"
        android:textColor="#555555"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_region"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/textView_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_region"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="Skills"
        android:textColor="#555555"
        android:textSize="18sp" />




    <TextView
        android:id="@+id/textView_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_skills"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:textSize="18sp"
        android:text="Years of experience"
        android:textColor="#555555" />

    <Spinner
        android:id="@+id/spinner_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_experience"
        android:layout_marginTop="10dp" />








    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_submit"
        android:layout_below="@id/spinner_experience"
        android:layout_marginTop="50dp"
        android:text="Submit"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"/>


</RelativeLayout>